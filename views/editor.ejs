  <body>
  <%if (data != null) { %>
  	<paper-header-panel>
    	<paper-toolbar>
        <h1><%= data[0].title %></h1>
    	</paper-toolbar>
  	</paper-header-panel>
    <form method="post" action="/update/<%= data[0]._id %>" >
     
      <input type="button" value="B" onclick="mod_selection('[b]','[/b]')" />
      <input type="button" value="I" onclick="mod_selection('[i]','[/i]')" />
      <input type="button" value="U" onclick="mod_selection('[u]','[/u]')" />

    <br />

        <textarea  id="my_text" name="results" rows="30" cols="100"><%= data[0].post.results %></textarea>
      
        <br/>
        <input type="submit" value="Update"><input type="button" value="Show text" />
    </form>
                  
  <% } %>
