    <style>
      body {
        font-family: 'Helvetica Neue';
        margin: 0;
        padding: 24px;
        user-select: none;
        transform: translateZ(0);
      }
      paper-button {
        margin: 1em;
        width: 10em;
      }
      paper-button.colored {
        color: #4285f4;
        fill: #4285f4;
      }
  
      }
    </style>
